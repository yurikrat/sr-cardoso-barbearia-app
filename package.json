{
  "name": "sr-cardoso-barbearia-app",
  "version": "1.0.0",
  "private": true,
  "description": "App de agendamentos mobile-first para a Barbearia Sr. Cardoso",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:server": "npm run dev --workspace=apps/server",
    "build": "npm run build:shared && npm run build --workspaces --if-present",
    "build:web": "npm run build:shared && npm run build --workspace=apps/web",
    "build:functions": "npm run build --workspace=apps/functions",
    "build:server": "npm run build --workspace=apps/server",
    "build:shared": "npm run build --workspace=packages/shared",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

